<%= simple_form_for @vehicle do |f| %>

    <%= f.association :car_brand %>
    <%= f.input :license_plate %>
    <%= error_span(@vehicle[:license_plate]) %>    
    <%= f.input :model %>
    <%= error_span(@vehicle[:model]) %>
    <%= f.input :fabrication_year %>
    <%= error_span(@vehicle[:fabrication_year]) %>
    <%= f.input :color %>
    <%= error_span(@vehicle[:color]) %>
    <%= f.input :serial_number %>
    <%= error_span(@vehicle[:serial_number]) %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicles_path, :class => 'btn btn-default' %>
<% end %>
