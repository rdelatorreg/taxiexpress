<%- model_class = Rate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @rate.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:origin_id) %>:</strong></dt>
  <dd><%= @rate.origin_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination_id) %>:</strong></dt>
  <dd><%= @rate.destination_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rate_path(@rate), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rate_path(@rate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
