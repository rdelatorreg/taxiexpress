<%- model_class = Vehicle -%>
<div class="page-header">
  <h1>Veh√≠culos</h1>
</div>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:car_brand_id) %></th>
      <th><%= model_class.human_attribute_name(:license_plate) %></th>      
      <th><%= model_class.human_attribute_name(:model) %></th>
      <th><%= model_class.human_attribute_name(:fabrication_year) %></th>
      <th><%= model_class.human_attribute_name(:color) %></th>
      <th><%= model_class.human_attribute_name(:serial_number) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.car_brand_name %></td>
        <td><%= vehicle.license_plate %></td>        
        <td><%= vehicle.model %></td>
        <td><%= vehicle.fabrication_year %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.serial_number %></td>
        <td><%=l vehicle.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vehicle_path(vehicle), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vehicles_path(vehicle),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vehicle_path,
            :class => 'btn btn-primary' %>
