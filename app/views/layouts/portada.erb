<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>TaxiExpress</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>

<body>

<%= render "layouts/menu" %>

<header id="myCarousel" class="carousel slide">


  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <%  @carousel.each_with_index  do |c,x|  %>
        <div class="item <%= x==0 ? 'active' : ''  %>">
          <div class="fill" style="background-image:url('<%= c.image.url  %>');"></div>
          <div class="carousel-caption">
            <h2></h2>
          </div>
        </div>
    <% end %>

  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>

  <!-- form -->
  <div style="position:absolute; top: 30px;width:100%">

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-1 col-md-5 col-lg-4">
          <div style="background-color:white; width:100%;border-radius:10px; padding:15px" >
            <h2 class="text-center">Reservas</h2>
            <%= form_tag reservacion_path, method: "get", class: "form-horizontal" do |f| %>
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Origen</label>
                  <div class="col-sm-9">
                    <%= select_tag :origen, options_for_select(@districts), prompt: '-- Seleccionar --', class: 'form-control', required: true %>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-3 control-label">Destino</label>
                  <div class="col-sm-9">
                    <%= select_tag :destino, options_for_select(@districts), prompt: '-- Seleccionar --', class: 'form-control', required: true %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-default">Reservar</button>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>


</header>

<%= yield %>

<%= render "layouts/footer" %>

<%= javascript_include_tag "application" %>

<script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
</script>

</body>

</html>
