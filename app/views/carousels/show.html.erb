<%- model_class = Carousel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @carousel.name %></dd>

  <dd><%= image_tag @carousel.image.url %></dd>
  <dd><%= image_tag @carousel.image.url(:medium) %></dd>
  <dd><%= image_tag @carousel.image.url(:thumb) %></dd>

  <dt><strong><%= model_class.human_attribute_name(:image_updated_at) %>:</strong></dt>
  <dd><%= @carousel.image_updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              carousels_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_carousel_path(@carousel), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              carousel_path(@carousel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
