<%= simple_form_for @reservation, :html => { :class => '' } do |f| %>
  <%= f.input :driver_id, collection: @drivers, :label_method => 'fullname', :value_method => 'id' %>
  <%= error_span(@reservation[:client_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>