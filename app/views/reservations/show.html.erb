<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:origin_id) %>:</strong></dt>
  <dd><%= @reservation.origin_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination_id) %>:</strong></dt>
  <dd><%= @reservation.destination_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pickuptime) %>:</strong></dt>
  <dd><%= @reservation.pickuptime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:origin_street) %>:</strong></dt>
  <dd><%= @reservation.origin_street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination_street) %>:</strong></dt>
  <dd><%= @reservation.destination_street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @reservation.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qualification) %>:</strong></dt>
  <dd><%= @reservation.qualification %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @reservation.client_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reservations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reservation_path(@reservation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservation_path(@reservation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
