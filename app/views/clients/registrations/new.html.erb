<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Registro</h1>
    <%= render_breadcrumbs("", { active_class: 'active' }) %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :firstname, required: true, autofocus: true %>
          <%= f.input :lastname, required: true %>
          <%= f.input :documenttype, required: true, collection: @docs,:label_method => :text,:value_method => :value %>
          <%= f.input :documentnumber, required: true %>


          <%= f.input :birthdate, as: :date, start_year: Date.today.year - 90,
                      end_year: Date.today.year - 12,
                      order: [:day, :month, :year] %>

          <%= f.input :address, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("Minimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
    <% end %>
  </div>
</div>


<%= render "clients/shared/links" %>
