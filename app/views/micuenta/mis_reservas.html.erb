<%= content_for :contenido do %>

   <table class="table table-bordered table-hover">
    <thead>
     <tr>
        <th>Registro</th>
        <th>Origens</th>
        <th>Destino</th>
        <th>Estado</th>
        <th>Precio</th>
        <th>Calificaci√≥n</th>
        <th></th>
     </tr>
    </thead>
    
    <tbody>
       <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.created_at.strftime("%d/%m/%Y %I:%M%p") %></td>
        <td><%= reservation.origin_name %></td>
        <td><%= reservation.destination_name %></td>
        <td> <span class="label label-warning"><%= reservation.status.text %></span>  </td>
        <td>S./ <%= reservation.price %></td>
        <td><%= reservation.qualification %></td>
        <td> 
            <%= link_to detalle_reserva_path(reservation.id), class: 'btn btn-info btn-xs' do %> Detalle <% end %>
            <% if reservation.status_id == 2 %>
            <%= link_to calificar_servicio_path(reservation.id), class: 'btn btn-success btn-xs' do %> Calificar <% end %>
            <% end %>
        </td>
      </tr>
       <% end %>
    </tbody>
   </table>
   
<% end %>

