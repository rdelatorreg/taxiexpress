<h2>Acceso</h2>
<div class="row">
  <div class="col-xs-6">
    <div class="well">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email, required: false, autofocus: true %>
          <span class="help-block"></span>
        </div>
        <div class="form-group">
          <%= f.input :password, required: false %>
          <span class="help-block"></span>
        </div>
        <div id="loginErrorMsg" class="alert alert-error hide">Wrong username or password</div>
        <div class="checkbox">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <p class="help-block">(if this is a private computer)</p>
        </div>
          <%= f.button :submit, "Log in", class: "btn btn-success btn-block"  %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-default btn-block' %><br />
      <% end %>
    </div>
  </div>
  <div class="col-xs-6">
    <p class="lead">Registrate ahora totalmente <span class="text-success">GRATIS</span></p>
    <ul class="list-unstyled" style="line-height: 2">
      <li><span class="fa fa-check text-success"></span> See all your orders</li>
      <li><span class="fa fa-check text-success"></span> Fast re-order</li>
      <li><span class="fa fa-check text-success"></span> Save your favorites</li>
      <li><span class="fa fa-check text-success"></span> Fast checkout</li>
      <li><span class="fa fa-check text-success"></span> Get a gift <small>(only new customers)</small></li>
      <li><a href="/read-more/"><u>Read more</u></a></li>
    </ul>
    <p>

      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-info btn-block' %>
    </p>
  </div>
</div>


